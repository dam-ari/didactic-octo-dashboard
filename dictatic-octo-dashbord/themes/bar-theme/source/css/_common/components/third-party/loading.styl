#loading
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex
  justify-content: center
  align-items: center
  background-color: var(--grey-1)
  z-index: 9999
  transition: opacity 0.3s ease

.unicorn-container
  width: 100%
  height: 150px
  position: relative
  overflow: hidden

.unicorn
  width: 60px
  height: 60px
  position: absolute
  top: 45px
  left: -60px
  animation: gallop-unicorn 4s linear infinite

.unibody
  width: 60px
  height: 60px
  background: linear-gradient(to bottom, #ffffff, #f5e3c9)
  border-radius: 50%
  position: absolute
  animation: body-gallop 4s linear infinite

.head
  width: 40px
  height: 40px
  background: linear-gradient(to bottom, #ffffff, #f5e3c9)
  border-radius: 50%
  position: absolute
  top: 10px
  left: 40px

.horn
  width: 10px
  height: 20px
  background: linear-gradient(to bottom, #ff7eb9, #ff65a3, #7afcff)
  position: absolute
  top: -10px
  left: 15px
  clip-path: polygon(50% 0%, 0% 100%, 100% 100%)
  -webkit-clip-path: polygon(50% 0%, 0% 100%, 100% 100%)

.ear
  width: 10px
  height: 15px
  background: linear-gradient(to bottom, #ffffff, #f5e3c9)
  border-radius: 50%
  position: absolute

.ear.left
  top: -5px
  left: 5px

.ear.right
  top: -5px
  right: 5px

.eye
  width: 5px
  height: 5px
  background-color: #333
  border-radius: 50%
  position: absolute

.eye.left
  top: 15px
  left: 10px

.eye.right
  top: 15px
  right: 10px

.mouth
  width: 10px
  height: 5px
  background-color: #333
  border-radius: 5px / 2.5px
  position: absolute
  top: 25px
  left: 15px

.foot
  width: 20px
  height: 20px
  background: linear-gradient(to bottom, #ffffff, #f5e3c9)
  border-radius: 50%
  position: absolute
  top: 40px
  left: 10px

.paw
  width: 20px
  height: 20px
  background: linear-gradient(to bottom, #ffffff, #f5e3c9)
  border-radius: 50%
  position: absolute
  top: 40px
  left: 30px

@keyframes gallop-unicorn
  0% {
    left: -60px;
    top: 70px;
  }
  20% {
    left: 20%;
    top: 30px;
  }
  30% {
    left: 30%;
    top: 70px;
  }
  40% {
    left: 40%;
    top: 50px;
  }
  60% {
    left: 60%;
    top: 30px;
  }
  70% {
    left: 70%;
    top: 70px;
  }
  80% {
    left: 80%;
    top: 30px;
  }
  100% {
    left: 100%;
    top: 50px;
  }

@keyframes body-gallop
  0%, 100% {
    transform: scale(1);
  }
  20%, 80% {
    transform: scale(1.2, 0.8);
  }
  50% {
    transform: scale(0.8, 1.2);
  }

unibody.loaded #loading
  opacity: 0
  visibility: hidden
  pointer-events: none
