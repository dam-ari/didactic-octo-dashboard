#unicorn {
  @extend $fix-fullscreen;
  display: none;
  background: linear-gradient(to top, #fddb92 0%, #d1fdff 80%);
  position: relative;
  overflow: hidden;

  .planet {
    position: fixed;
    left: -50%;
    top: -50%;
    width: 200%;
    height: 200%;
    animation: rotate 2s cubic-bezier(.7, 0, 0, 1);
    transform-origin: center bottom;
  }

  &:before {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    opacity: 0;
    background: linear-gradient(to top, #30cfd0 0%, #330867 100%);
    transition: 2s ease all;
  }

  .sun, .moon {
    position: absolute;
    border-radius: 100%;
    left: 55%;
    top: 32%;
    transition: opacity 2s ease;
  }

  .sun {
    height: 40px;
    width: 40px;
    background: #ffee94;
    box-shadow: 0px 0px 40px #ffee94;
    opacity: 1;
  }

  .moon {
    height: 24px;
    width: 24px;
    background: #eee;
    box-shadow: 0px 0px 20px #fff;
    opacity: 0;
  }

  .body {
    display: block;
    position: absolute;
    bottom: -20px;
    height: 180px;
    width: 160px;
    left: 50%;
    margin-left: -80px;
    background: #f3e5f5;
    border-radius: 50% 50% 40% 40%;
    transition: all .25s ease-in-out;
    animation: slideUpBigIn 1s;

    &:before, &:after  {
      position: absolute;
      content: "";
      width: 0;
      height: 0;
      border-bottom: 20px solid #f3e5f5;
      top: -20px;
      transition: all .25s ease-in-out;
    }
    &:before {
      border-left: 0px solid transparent;
      border-right: 30px solid transparent;
      left: 0;
    }
    &:after {
      border-right: 0px solid transparent;
      border-left: 30px solid transparent;
      right: 0;
    }

    .face {
      position: relative;
      width: 100%;
      height: 100%;
      animation: faceAnim 2s infinite;
    }

    .eyes {
      display: block;
      position: absolute;
      background: #fff;
      height: 30px;
      width: 30px;
      border-radius: 50%;
      bottom: 100px;
      border: 2px solid #000;
      overflow: hidden;
    }

    .eyes.left {
      left: 30px;
    }

    .eyes.right {
      right: 30px;
    }

    .eyes .pupil {
      display: block;
      position: absolute;
      background: #000;
      border-radius: 50%;
      width: 10px;
      height: 10px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .eyes::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: #fff;
      top: 0;
      left: 0;
      animation: blink 4s infinite;
    }

    .nose {
      position: absolute;
      top: 70px;
      left: 50%;
      transform: translateX(-50%);
      height: 10px;
      width: 10px;
      background: #ffb399;
      border-radius: 50%;
    }

    .horn {
      position: absolute;
      top: -30px;
      left: 50%;
      transform: translateX(-50%);
      width: 20px;
      height: 60px;
      background:  linear-gradient(45deg,rgba(255,182,185,.9) 25%,transparent 0,transparent 50%,rgba(250,227,217,.9) 0,rgba(187,222,214,.9) 75%,transparent 0,rgba(138,198,209,.9));
      border-radius: 50% 50% 0 0;
      box-shadow: 0px -5px 15px rgba(255, 235, 59, 0.5);
      animation: hornAnim 2s infinite;
    }
  }

  .star {
    position: absolute;
    width: 2px;
    height: 2px;
    background: white;
    border-radius: 50%;
    box-shadow: 0 0 10px white;
    animation: starAnim linear infinite;
  }

  @keyframes faceAnim {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  @keyframes blink {
    0%, 20%, 50%, 70%, 100% { height: 100%; }
    25%, 65% { height: 0; }
  }

  @keyframes hornAnim {
    0%, 100% { transform: translateX(-50%) rotate(0deg); }
    50% { transform: translateX(-50%) rotate(10deg); }
  }

  @keyframes starAnim {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(0.5); opacity: 0.5; }
    100% { transform: scale(1); opacity: 1; }
  }

  &.dark {
    &:before {
      opacity: 1;
    }

    .sun {
      opacity: 0;
    }

    .moon {
      opacity: 1;
    }

    .body {
      background: #444;
      &:before {
        border-bottom: 20px solid #444;
      }
      &:after {
        border-bottom: 20px solid #444;
      }

      .eyes {
        background: #ccc;
        border-color: #000;
      }

      .eyes .pupil {
        background: #333;
      }

      .nose {
        background: #ff8a80;
      }
    }

    .star {
      background: #fff;
      box-shadow: 0 0 10px #fff;
    }
  }
}
